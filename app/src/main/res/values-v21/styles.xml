<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppMaterialTheme" parent="SuperMaterialTheme">
        <!-- Customize for lollipop above theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <!--
            <item name="android:windowAllowEnterTransitionOverlap">false</item>
            <item name="android:windowAllowReturnTransitionOverlap">false</item>
        -->
    </style>

    <style name="SuperMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">#A5D6A7</item>
        <item name="colorControlActivated">#81C784</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/customActionMode</item>

